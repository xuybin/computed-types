{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}
